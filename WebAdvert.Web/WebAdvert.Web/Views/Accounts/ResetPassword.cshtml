@model WebAdvert.Web.Models.Accounts.ConfirmModel

<div class="row">
    <div class="cold-md-4">
        <form method="post"asp-controller="Accounts" asp-action="ResetPassword">
            <h4>Reset/Forget password</h4>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input id="inputEmail" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
        
            <button type="submit" style="display:@(Model.codeRevieved?"none":"block")" id="btnEmail" class="btn  btn-primary">Email Security Code</button>
            
            <div id="codeBlock" style="display:@(Model.codeRevieved?"block":"none")">
                <div class="form-group">
                    <label asp-for="Code">Code</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">ConfirmPassword</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn  btn-dark">Reset Password</button>
            </div>

        </form>
    </div>
</div>

<script language="javaScript">
    function diplayControl()
    {
        var emailId = document.getElementById("inputEmail");

        if (emailId.value == '')
        {
            return false;
        }

        var divId = document.getElementById("codeBlock");
       
        divId.style = 'display:block';
        var btnEmail = document.getElementById("btnEmail");
        btnEmail.style = 'display:none';

    }
</script>

